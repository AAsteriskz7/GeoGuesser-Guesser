{
  "manifest_version": 3,
  "name": "AI Geoguesser Guesser",
  "version": "1.1",
  "description": "Takes a screenshot of your webpage and uses the Gemini API to guess the location.",
  "icons": {
    "16": "Logo.png",
    "32": "Logo.png",
    "48": "Logo.png",
    "128": "Logo.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "Logo.png",
      "32": "Logo.png",
      "48": "Logo.png",
      "128": "Logo.png"
    }
  }
}
